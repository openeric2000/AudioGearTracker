@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AudioGearTracker</title>
    <script src="https://unpkg.com/@@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AudioGearTracker.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="bg-white border-b border-gray-200 mb-3 shadow-md">
            <div class="container mx-auto px-4 flex flex-wrap items-center justify-between py-3">
                <a class="text-xl font-bold text-gray-800 hover:text-gray-600" asp-area="" asp-controller="Home" asp-action="Index">AudioGearTracker</a>
                <button class="block sm:hidden text-gray-500 hover:text-gray-700 focus:outline-none" type="button" onclick="document.getElementById('navbar-menu').classList.toggle('hidden');">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
                <div id="navbar-menu" class="hidden sm:flex w-full sm:w-auto items-center sm:justify-between mt-2 sm:mt-0">
                    <ul class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-6 list-none mb-0 pl-0">
                        <li class="nav-item">
                            <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Brands" asp-action="Index">品牌管理</a>
                        </li>
                        <li class="nav-item">
                            <a class="text-gray-700 hover:text-gray-900" asp-area="" asp-controller="Equipments" asp-action="Index">器材清單</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mx-auto px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t border-gray-200 text-gray-500 py-4 mt-auto">
        <div class="container mx-auto px-4">
            &copy; 2026 - AudioGearTracker - <a class="text-blue-600 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

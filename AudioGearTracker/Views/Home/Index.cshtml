@{
    ViewData["Title"] = "首頁";
}

<div class="space-y-8 animate-fade-in-up">

    <div class="relative overflow-hidden rounded-[2.5rem] bg-white border border-gray-100 shadow-xl shadow-lilac/5 p-10 md:p-14">

        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 rounded-full bg-lilac/10 blur-3xl"></div>

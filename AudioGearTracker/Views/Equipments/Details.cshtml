@model AudioGearTracker.Core.Entities.Equipment

@{
    ViewData["Title"] = "器材詳情";
}

<div class="w-full max-w-3xl mx-auto px-4 md:px-0">
    <div class="mb-6">
        <a asp-action="Index" class="text-gray-500 hover:text-lilac transition-colors flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            返回列表
        </a>
    </div>

    <div class="bg-white rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
        <div class="bg-gradient-to-r from-gray-50 to-white px-6 py-6 md:px-8 border-b border-gray-100 flex justify-between items-start">
            <div>
                <h1 class="text-3xl font-black text-gray-800 tracking-tight mb-2">@Html.DisplayFor(model => model.ModelName)</h1>
                <div class="flex items-center space-x-3">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-bold bg-lilac/10 text-lilac border border-lilac/20">
                        @Html.DisplayFor(model => model.Type)
                    </span>
                    <span class="text-gray-500 font-medium flex items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                        </svg>
                        @Html.DisplayFor(model => model.Brand.Name)
                    </span>
                </div>
            </div>
            <div class="flex flex-col items-center">
                <div class="w-16 h-16 rounded-2xl bg-lilac text-white flex items-center justify-center text-2xl font-black shadow-lg shadow-lilac/30">
                    @Html.DisplayFor(model => model.ReviewScore)
                </div>
                <span class="text-xs text-gray-400 mt-1 font-bold">SCORE</span>
            </div>
        </div>

        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
                <div class="space-y-1">
                    <dt class="text-xs font-bold text-gray-400 uppercase tracking-wider">購入價格</dt>
                    <dd class="text-2xl font-mono text-gray-700">@Html.DisplayFor(model => model.Price)</dd>
                </div>
                <div class="space-y-1">
                    <dt class="text-xs font-bold text-gray-400 uppercase tracking-wider">購入日期</dt>
                    <dd class="text-xl text-gray-700">
                        @if (Model.PurchaseDate.HasValue)
                        {
                            @Model.PurchaseDate.Value.ToString("yyyy/MM/dd")
                        }
                        else
                        {
                            <span class="text-gray-300">-</span>
                        }
                    </dd>
                </div>
            </div>

            <div class="bg-gray-50 rounded-2xl p-6 border border-gray-100">
                <h3 class="text-sm font-bold text-gray-900 mb-3 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-lilac" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                    聽感筆記
                </h3>
                <p class="text-gray-600 leading-relaxed whitespace-pre-wrap">@Html.DisplayFor(model => model.Notes)</p>
            </div>
        </div>

        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 flex justify-end gap-3">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="px-6 py-2 bg-lilac hover:bg-lilac-hover text-white font-bold rounded-xl transition-colors shadow-md shadow-lilac/20">
                編輯器材
            </a>
            <a asp-action="Index" class="px-6 py-2 bg-white border border-gray-200 text-gray-600 font-bold rounded-xl hover:bg-gray-50 transition-colors">
                返回
            </a>
        </div>
    </div>
</div>
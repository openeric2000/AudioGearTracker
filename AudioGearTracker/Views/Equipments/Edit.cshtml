@model AudioGearTracker.Core.Entities.Equipment
@using AudioGearTracker.Core.Enums

@{
    ViewData["Title"] = "編輯器材";
}

<div class="w-full max-w-2xl mx-auto bg-white p-6 md:p-8 rounded-2xl shadow-lg border border-gray-100">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-l-4 border-lilac pl-4">編輯器材</h2>

    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="ModelName" class="block text-sm font-medium text-gray-500 mb-1"></label>
            <input asp-for="ModelName" readonly
                class="w-full rounded-lg border-gray-200 bg-gray-100 text-gray-500 cursor-not-allowed focus:ring-0" />
        </div>

        <div>
            <label asp-for="Type" class="block text-sm font-medium text-gray-500 mb-1"></label>
            <select disabled class="w-full rounded-lg border-gray-200 bg-gray-100 text-gray-500 cursor-not-allowed"
                asp-items="Html.GetEnumSelectList<EquipmentType>()" asp-for="Type"></select>
            <input type="hidden" asp-for="Type" />
        </div>

        <div>
            <label asp-for="BrandId" class="block text-sm font-medium text-gray-500 mb-1"></label>
            <select disabled class="w-full rounded-lg border-gray-200 bg-gray-100 text-gray-500 cursor-not-allowed"
                asp-items="ViewBag.BrandId" asp-for="BrandId"></select>
            <input type="hidden" asp-for="BrandId" />
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label asp-for="Price" class="block text-sm font-medium text-gray-500 mb-1"></label>
                <input asp-for="Price" readonly
                    class="w-full rounded-lg border-gray-200 bg-gray-100 text-gray-500 cursor-not-allowed focus:ring-0" />
            </div>
            <div>
                <label asp-for="ReviewScore" class="block text-sm font-medium text-gray-700 mb-1"></label>
                <input asp-for="ReviewScore" type="number" step="0.1" max="10" min="0"
                    class="w-full rounded-lg border-gray-300 shadow-sm focus:border-lilac focus:ring focus:ring-lilac/50" />
                <span asp-validation-for="ReviewScore" class="text-red-500 text-xs"></span>
            </div>
        </div>

        <div>
            <label asp-for="PurchaseDate" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="PurchaseDate" type="text"
                class="datepicker w-full rounded-lg border-gray-300 shadow-sm focus:border-lilac focus:ring focus:ring-lilac/50"
                placeholder="請選擇日期" />
            <span asp-validation-for="PurchaseDate" class="text-red-500 text-xs"></span>
        </div>

        <div>
            <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <textarea asp-for="Notes" rows="3"
                class="w-full rounded-lg border-gray-300 shadow-sm focus:border-lilac focus:ring focus:ring-lilac/50"></textarea>
            <span asp-validation-for="Notes" class="text-red-500 text-xs"></span>
        </div>

        <div class="pt-4 flex gap-3">
            <button type="submit"
                class="px-6 py-2.5 bg-lilac hover:bg-lilac-hover text-white font-bold rounded-lg shadow-md transition-all">儲存修改</button>
            <a asp-action="Index"
                class="px-6 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-all">取消</a>
        </div>
    </form>
</div>
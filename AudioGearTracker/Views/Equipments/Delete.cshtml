@model AudioGearTracker.Core.Entities.Equipment

@{
    ViewData["Title"] = "刪除器材";
}

<div class="max-w-2xl mx-auto mt-10">
    <div class="bg-white rounded-2xl shadow-xl border border-red-100 overflow-hidden">
        <div class="bg-red-50 px-8 py-6 border-b border-red-100 flex items-center gap-4">
            <div class="p-3 bg-red-100 rounded-full text-red-600">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            <div>
                <h1 class="text-2xl font-bold text-red-900">刪除確認</h1>
                <p class="text-red-700 text-sm">您確定要刪除此器材嗎？此動作無法復原。</p>
            </div>
        </div>

        <div class="p-8">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h2 class="text-3xl font-black text-gray-800">@Html.DisplayFor(model => model.ModelName)</h2>
                    <p class="text-gray-500 font-medium mt-1">@Html.DisplayFor(model => model.Brand.Name) · @Html.DisplayFor(model => model.Type)</p>
                </div>
                <div class="text-right">
                    <p class="text-xs font-bold text-gray-400 uppercase">購入價格</p>
                    <p class="text-xl font-mono text-gray-700">@Html.DisplayFor(model => model.Price)</p>
                </div>
            </div>

            <div class="bg-gray-50 p-4 rounded-xl border border-gray-200">
                <p class="text-sm text-gray-500 mb-1">聽感筆記預覽：</p>
                <p class="text-gray-700 italic">"@Html.DisplayFor(model => model.Notes)"</p>
            </div>
        </div>

        <div class="bg-gray-50 px-8 py-4 border-t border-gray-100 flex justify-end gap-3">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-bold rounded-xl transition-colors shadow-lg shadow-red-600/20">
                    確認刪除
                </button>
            </form>
            <a asp-action="Index" class="px-6 py-2 bg-white border border-gray-200 text-gray-600 font-bold rounded-xl hover:bg-gray-50 transition-colors">
                取消
            </a>
        </div>
    </div>
</div>
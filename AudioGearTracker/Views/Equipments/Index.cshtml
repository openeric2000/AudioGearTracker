@model IEnumerable<AudioGearTracker.Core.Entities.Equipment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
        <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.ModelName)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.PurchaseDate)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.ReviewScore)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
@foreach (var item in Model) {
        <tr>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.ModelName)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.ReviewScore)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                @Html.DisplayFor(modelItem => item.Brand.Country)
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
                <a class="text-indigo-600 hover:text-indigo-900" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="text-indigo-600 hover:text-indigo-900" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="text-indigo-600 hover:text-indigo-900" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<AudioGearTracker.Core.Entities.Equipment>

@{
    ViewData["Title"] = "器材清單";
}

<div class="space-y-6">
    <div class="flex justify-between items-center border-b border-gray-100 pb-4">
        <h1 class="text-3xl font-black text-gray-800 tracking-tight">器材清單</h1>

        <a asp-action="Create" class="flex items-center px-5 py-2.5 bg-lilac hover:bg-lilac-hover text-white font-bold rounded-xl shadow-lg shadow-lilac/30 transition-all hover:-translate-y-0.5">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            新增器材
        </a>
    </div>

    <div class="hidden md:block overflow-hidden bg-white border border-gray-200 rounded-2xl shadow-sm">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase">
                        @Html.DisplayNameFor(model => model.ModelName)
                    </th>
                    <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase">
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase">
                        @Html.DisplayNameFor(model => model.Brand)
                    </th>
                    <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase">
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase">
                        @Html.DisplayNameFor(model => model.ReviewScore)
                    </th>
                    <th class="px-6 py-4 text-xs font-bold tracking-wider text-gray-500 uppercase text-right">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-lilac-bg/30 transition-colors duration-150 group">
                        <td class="px-6 py-4">
                            <span class="font-bold text-gray-900 text-base">@Html.DisplayFor(modelItem => item.ModelName)</span>
                        </td>

                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-50 text-purple-700 border border-purple-100">
                                @Html.DisplayFor(modelItem => item.Type)
                            </span>
                        </td>

                        <td class="px-6 py-4 text-gray-600 font-medium">
                            @Html.DisplayFor(modelItem => item.Brand.Name)
                        </td>

                        <td class="px-6 py-4 font-mono text-gray-600">
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>

                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <span class="font-bold text-lilac mr-1">@Html.DisplayFor(modelItem => item.ReviewScore)</span>
                                <span class="text-xs text-gray-400">/ 10</span>
                            </div>
                        </td>

                        <td class="px-6 py-4 text-right space-x-2 whitespace-nowrap">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="text-sm font-bold text-lilac hover:text-lilac-hover transition-colors">編輯</a>
                            <span class="text-gray-300">|</span>
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-sm font-bold text-gray-500 hover:text-gray-700 transition-colors">詳情</a>
                            <span class="text-gray-300">|</span>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="text-sm font-bold text-red-400 hover:text-red-600 transition-colors">刪除</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards View -->
    <div class="md:hidden space-y-4">
        @foreach (var item in Model)
        {
            <div class="bg-white p-5 rounded-2xl shadow-sm border border-gray-100 flex flex-col space-y-3">
                <div class="flex justify-between items-start">
                    <div>
                        <div class="flex flex-wrap items-center gap-2">
                            <h3 class="font-bold text-gray-900 text-lg">@Html.DisplayFor(modelItem => item.ModelName)</h3>
                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-50 text-purple-700 border border-purple-100">
                                @Html.DisplayFor(modelItem => item.Type)
                            </span>
                        </div>
                        <div class="text-gray-500 text-sm mt-1">@Html.DisplayFor(modelItem => item.Brand.Name)</div>
                    </div>
                    <div class="bg-gray-50 px-2 py-1 rounded text-right whitespace-nowrap ml-2">
                        <div class="font-mono font-bold text-gray-700">@Html.DisplayFor(modelItem => item.Price)</div>
                    </div>
                </div>
                
                <div class="flex items-center justify-between border-t border-gray-50 pt-3">
                    <div class="flex items-center">
                        <span class="text-xs text-gray-500 mr-2">評分:</span>
                        <span class="font-bold text-lilac mr-1">@Html.DisplayFor(modelItem => item.ReviewScore)</span>
                        <span class="text-xs text-gray-400">/ 10</span>
                    </div>
                    <div class="flex space-x-3">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-sm font-bold text-lilac hover:text-lilac-hover">編輯</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="text-sm font-bold text-gray-500 hover:text-gray-700">詳情</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="text-sm font-bold text-red-400 hover:text-red-600">刪除</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
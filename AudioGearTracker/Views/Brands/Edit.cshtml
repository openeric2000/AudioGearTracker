@model AudioGearTracker.Core.Entities.Brand

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Brand</h4>
<hr />
<div class="flex flex-wrap">
    <div class="w-full md:w-1/3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
            <input type="hidden" asp-for="Id" />
            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-700 font-bold mb-2"></label>
                <input asp-for="Name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Country" class="block text-gray-700 font-bold mb-2"></label>
                <input asp-for="Country" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Country" class="text-red-500 text-sm"></span>
            </div>
            <div class="mb-4">
                <input type="submit" value="Save" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

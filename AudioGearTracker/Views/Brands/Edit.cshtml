@model AudioGearTracker.Core.Entities.Brand

@{
    ViewData["Title"] = "編輯品牌";
}

<div class="w-full max-w-xl mx-auto bg-white p-6 md:p-8 rounded-2xl shadow-lg border border-gray-100 mt-6 md:mt-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-l-4 border-lilac pl-4">編輯品牌</h2>

    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Name" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-lilac focus:ring focus:ring-lilac/50 transition-all" />
            <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
        </div>

        <div>
            <label asp-for="Country" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Country" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-lilac focus:ring focus:ring-lilac/50 transition-all" />
            <span asp-validation-for="Country" class="text-red-500 text-xs"></span>
        </div>

        <div class="pt-4 flex gap-3">
            <button type="submit" class="px-6 py-2.5 bg-lilac hover:bg-lilac-hover text-white font-bold rounded-lg shadow-md transition-all">儲存修改</button>
            <a asp-action="Index" class="px-6 py-2.5 bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium rounded-lg transition-all">取消</a>
        </div>
    </form>
</div>